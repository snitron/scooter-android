<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/background_gray" />
            <corners android:radius="25dp" />
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
        </shape>
    </item>

    <item
        android:bottom="1dp"
        android:top="1dp"
        android:left="1dp"
        android:right="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="25dp" />
        </shape>
    </item>

    <item
        android:bottom="1dp"
        android:top="1dp"
        android:left="1dp"
        android:right="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="180"
                android:centerColor="@color/sota_scooter_gradient_end"
                android:centerX="0.4"
                android:endColor="@color/sota_scooter_gradient_end"
                android:startColor="@color/sota_scooter_gradient_start" />
            <corners android:radius="25dp" />
        </shape>
    </item>
</layer-list>
